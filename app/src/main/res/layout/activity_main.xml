<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="209sp"
                android:src="@drawable/cover"
                android:scaleType="centerCrop"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:fontFamily="@font/lobster_two"
                    android:text="Black-hole"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/des_bg_1"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textFontWeight="800"
                    android:textSize="44sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="6dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What is black-hole?"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:justificationMode="inter_word"
                    android:textSize="16sp"
                    android:lineHeight="19sp"
                    android:layout_marginBottom="7dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:text="@string/des" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How Big Are Black Holes?"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:justificationMode="inter_word"
                    android:textSize="16sp"
                    android:lineHeight="19sp"
                    android:layout_marginBottom="7dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:text="@string/size_explanation_1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:justificationMode="inter_word"
                    android:textSize="16sp"
                    android:lineHeight="19sp"
                    android:layout_marginBottom="7dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:text="@string/size_explanation_1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:justificationMode="inter_word"
                    android:textSize="15sp"
                    android:lineHeight="16sp"
                    android:layout_marginBottom="7dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:text="@string/size_explanation_1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How Do Black Holes Form?"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:justificationMode="inter_word"
                    android:textSize="15sp"
                    android:lineHeight="16sp"
                    android:layout_marginBottom="7dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:text="@string/bh_form" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Types of black hole:"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="5dp"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/black_hole"
                                android:scaleType="centerCrop"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginStart="4dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin"
                                android:justificationMode="inter_word"
                                android:textSize="10sp"
                                android:lineHeight="12sp"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:layout_marginBottom="7dp"
                                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                android:text="@string/event_horizon"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cabin"
                        android:justificationMode="inter_word"
                        android:textSize="15sp"
                        android:lineHeight="16sp"
                        android:layout_marginStart="4dp"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:text="@string/types_of_bh"
                        android:layout_weight="1"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:justificationMode="inter_word"
                    android:textSize="15sp"
                    android:lineHeight="16sp"
                    android:layout_marginBottom="7dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:text="@string/types_of_bh_1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stellar black holes — small but deadly"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:justificationMode="inter_word"
                    android:textSize="15sp"
                    android:lineHeight="16sp"
                    android:layout_marginBottom="7dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:text="@string/types_of_bh_2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Supermassive black holes — the birth of giants "
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:justificationMode="inter_word"
                    android:textSize="15sp"
                    android:lineHeight="16sp"
                    android:layout_marginBottom="7dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:text="@string/types_of_bh_3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Intermediate black holes"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:justificationMode="inter_word"
                    android:textSize="15sp"
                    android:lineHeight="16sp"
                    android:layout_marginBottom="7dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:text="@string/types_of_bh_4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Binary black holes: double trouble"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:src="@drawable/binary_bh"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:justificationMode="inter_word"
                    android:textSize="11sp"
                    android:lineHeight="14sp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginBottom="7dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:text="Artist's illustration of a supermassive black hole with a companion black hole orbiting around it.  (Image credit: Caltech-IPAC)" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:justificationMode="inter_word"
                    android:textSize="15sp"
                    android:lineHeight="16sp"
                    android:layout_marginBottom="7dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:text="@string/types_of_bh_5" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Layers of black hole:"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:justificationMode="inter_word"
                    android:textSize="15sp"
                    android:lineHeight="16sp"
                    android:layout_marginBottom="7dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:text="@string/size_explanation_1" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:src="@drawable/layers"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:justificationMode="inter_word"
                    android:textSize="15sp"
                    android:lineHeight="16sp"
                    android:layout_marginBottom="7dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:text="@string/layers_2" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:text="Black hole facts"
                        android:fontFamily="@font/cabin"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cabin"
                        android:justificationMode="inter_word"
                        android:textSize="15sp"
                        android:lineHeight="16sp"
                        android:layout_marginBottom="7dp"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:text="@string/fact_1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cabin"
                        android:justificationMode="inter_word"
                        android:textSize="15sp"
                        android:lineHeight="16sp"
                        android:layout_marginBottom="7dp"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:text="@string/fact_2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cabin"
                        android:justificationMode="inter_word"
                        android:textSize="15sp"
                        android:lineHeight="16sp"
                        android:layout_marginBottom="7dp"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:text="@string/fact_3"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cabin"
                        android:justificationMode="inter_word"
                        android:textSize="15sp"
                        android:lineHeight="16sp"
                        android:layout_marginBottom="7dp"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:text="@string/fact_4"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cabin"
                        android:justificationMode="inter_word"
                        android:textSize="15sp"
                        android:lineHeight="16sp"
                        android:layout_marginBottom="7dp"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:text="@string/fact_5"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cabin"
                        android:justificationMode="inter_word"
                        android:textSize="15sp"
                        android:lineHeight="16sp"
                        android:layout_marginBottom="7dp"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:text="@string/fact_6"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cabin"
                        android:justificationMode="inter_word"
                        android:textSize="15sp"
                        android:lineHeight="16sp"
                        android:layout_marginBottom="7dp"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:text="@string/fact_7"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:text="Thanks for reading\nPlease like comments &amp; share 🙂"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:weightSum="3">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/like"
                    style="?android:attr/buttonBarButtonStyle" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/comments"
                    style="?android:attr/buttonBarButtonStyle" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/share"
                    style="?android:attr/buttonBarButtonStyle" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                android:fontFamily="@font/aleo_light"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="© All right reserved 2022-23. Developed by Sohun"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>